<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Alert?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="yeray.priede.gestoresports.Controladors.MainViewController">
    <!-- Título de la Vista -->
    <TextField fx:id="txtNomParticipant" promptText="Nom Participant" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="10"/>
    <TextField fx:id="txtNickParticipant" promptText="Nick Participant" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="50"/>
    <TextField fx:id="txtEquipParticipant" promptText="Equip Participant" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="90"/>
    <TextField fx:id="txtPuntuacioParticipant" promptText="Puntuació Participant" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="130"/>

    <!-- Botones para agregar y eliminar participantes -->
    <Button text="Afegir Participant" onAction="#afegirParticipant" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="170"/>
    <Button text="Eliminar Participant" onAction="#eliminarParticipant" AnchorPane.leftAnchor="150" AnchorPane.topAnchor="170"/>

    <!-- Listas de Tornejos i Participants -->
    <ListView fx:id="lstTornejos" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="210"
              AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="300"/>

    <ListView fx:id="lstParticipants" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="270" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10"/>

    <!-- Botón para crear torneo -->
    <Button text="Crear Torneig" onAction="#crearTorneig" AnchorPane.leftAnchor="10" AnchorPane.bottomAnchor="10"/>
</AnchorPane>